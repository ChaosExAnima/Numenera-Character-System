.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
	.container
		.navbar-header
			button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
				span.sr-only Toggle Navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand(href="/") Character Sheets
		.collapse.navbar-collapse
			ul.nav.navbar-nav
				each item in nav
					li(class=item.active ? 'active' : ''): a(href=item.url)= item.name

			if nav.length > 1
				.btn-group.navbar-btn(data-toggle="buttons")
					each item in [1, 2, 3]
						label.btn.btn-primary(data-page=item, class=(item == page) ? 'active' : '')
							input(type="radio", name="pages")
							= "Page "+item

			p.navbar-text.navbar-right.refreshing
				span.glyphicon.glyphicon-refresh
				| Syncing